{
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run -A --node-modules-dir npm:vite",
    "build": "deno run -A --node-modules-dir npm:vite build",
    "preview": "deno run -A --node-modules-dir npm:vite preview",
    "serve": "deno run --watch --allow-env --allow-net --allow-read server/main.ts",
    "db:push": "deno --env -A --node-modules-dir npm:drizzle-kit push"
  },
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ]
  },
  "lint": {
    "files": {
      "include": [
        "src/",
        "server/"
      ],
      "exclude": [
        "dist/"
      ]
    }
  },
  "fmt": {
    "singleQuote": true,
    "trailingCommas": "onlyMultiLine",
    "semiColons": true
  },
  "imports": {
    "@googlemaps/js-api-loader": "npm:@googlemaps/js-api-loader@^2.0.2",
    "@mdi/font": "npm:@mdi/font@7.4.47",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "@std/http": "jsr:@std/http@^1.0.21",
    "@tsconfig/node22": "npm:@tsconfig/node22@^22.0.2",
    "@types/google.maps": "npm:@types/google.maps@^3.58.1",
    "@types/node": "npm:@types/node@^22.19.0",
    "@vitejs/plugin-vue": "npm:@vitejs/plugin-vue@^6.0.1",
    "@vue/tsconfig": "npm:@vue/tsconfig@~0.8.1",
    "@vueuse/core": "npm:@vueuse/core@^14.0.0",
    "@zod/zod": "jsr:@zod/zod@^4.1.12",
    "npm-run-all2": "npm:npm-run-all2@^8.0.4",
    "sass-embedded": "npm:sass-embedded@^1.93.3",
    "typescript": "npm:typescript@~5.9.3",
    "unplugin-vue-components": "npm:unplugin-vue-components@^29.2.0",
    "vite": "npm:vite@^7.2.2",
    "vite-plugin-vuetify": "npm:vite-plugin-vuetify@^2.1.2",
    "vue": "npm:vue@^3.5.24",
    "vue-tsc": "npm:vue-tsc@^3.1.3",
    "vue3-google-address-autocomplete": "npm:vue3-google-address-autocomplete@^1.1.3",
    "vue3-google-map": "npm:vue3-google-map@~0.25.1",
    "vuetify": "npm:vuetify@^3.10.9"
  }
}