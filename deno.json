{
  "tasks": {
    "dev": "deno run -A --node-modules-dir npm:vite",
    "build": "deno run -A --node-modules-dir npm:vite build",
    "preview": "deno run -A --node-modules-dir npm:vite preview",
    "serve": "deno run --watch --allow-env --allow-net --allow-read server/main.ts",
    "db:push": "deno --env -A --node-modules-dir npm:drizzle-kit push"
  },
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ]
  },
  "lint": {
    "files": {
      "include": [
        "src/",
        "server/"
      ],
      "exclude": [
        "dist/"
      ]
    }
  },
  "fmt": {
    "singleQuote": true,
    "trailingCommas": "onlyMultiLine",
    "semiColons": true
  },
  "imports": {
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "@std/http": "jsr:@std/http@^1.0.21",
    "@zod/zod": "jsr:@zod/zod@^4.1.12"
  }
}